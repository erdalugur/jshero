{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./lib",
    "target": "ES5",
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [ "es6", "dom" ],
    "skipLibCheck": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}